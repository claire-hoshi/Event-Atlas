rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function isOrganizer() {
      return isSignedIn() && (request.auth.token.role in ['organizer', 'organization', 'org']);
    }

    // Event images: organizers only
    match /eventImages/{eventId}/{fileName} {
      allow read: if true;
      allow write: if isOrganizer();
    }

    // Draft images: organizers only (non-public)
    match /draftImages/{draftId}/{fileName} {
      allow read: if isOrganizer();
      allow write: if isOrganizer();
    }

    // Profile images: owner only
    match /profileImages/{uid} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == uid;
    }

    // Site assets (logos, hero images) used in public UI
    match /siteAssets/{fileName} {
      // Allow anyone to read (UI images)
      allow read: if true;
      // Restrict writes to signed-in owner email (adjust as needed)
      allow write: if isSignedIn() && request.auth.token.email == 'kureahoshi_2026@depauw.edu';
    }
  }
}
